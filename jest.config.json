{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/(exceptions.*|main|(*.(module|middleware|dto)).(t|j)s"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
